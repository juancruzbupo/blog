<h1>Posts#show</h1>
<h1>
<%= @post.title%>	
<br>
<%= @post.body%>
</h1>

<h2>Comentario</h2>
<% @post.comments.each do |comment| %>
  <p>
    <strong>Comentario de:</strong>
    <%= comment.commenter %>
  </p>
 
  <p>
    <%= comment.body %>
  </p>
<% end %>

<h2>Agregar Comentario:</h2>
<%= form_for([@post, @post.comments.build]) do |f| %>
  <p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Atras', posts_path %>