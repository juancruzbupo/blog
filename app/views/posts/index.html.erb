<h1>Posts</h1>
<%= link_to 'New post', new_post_path %>
<br>
<% @post.each do |post|%>
<%=post.id%>-
<%=post.title%>
<%=post.body%>
<%=link_to 'show',post_path(post.id)%>
<%= link_to 'Edit', edit_post_path(post.id) %>
<%= link_to 'Destroy', post_path(post),method: :delete, data: { confirm: 'desea eliminar?' } %>
<br>
<%end %>